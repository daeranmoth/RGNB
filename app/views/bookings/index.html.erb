
<div class="container">
  <h1>Tes réservations à venir avec des accompagnateurs</h1>
  <div class="custom-button">
    <%= link_to "Réserver une nouvelle expérience", experiences_path %>
  </div>
  <% @bookings.each do |booking| %>
    <% if booking.user == current_user  %>
      <div class="mini-card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
        <div class="mini-card-product-infos">
          <div class="mini-card-product-details">
            <h2> <%= booking.experience.category %> avec <%= booking.experience.user.first_name %></h2>
            <p> <%= booking.experience.description %></p>
            <h3><%= booking.start_date%> </h3>
          </div>

          <div class="mini-card-product-details">
            <h2><%= booking.experience.price_per_hour%>€ </h2>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<div class="container">
  <h1>Tes réservations à venir en tant qu'accompagnateur</h1>
  <div class="custom-button">
    <%= link_to "Proposer une nouvelle expérience", new_experience_path %>
  </div>

  <% @bookings.each do |booking| %>
    <% if booking.experience.user == current_user %>
      <div class="mini-card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
        <div class="mini-card-product-infos">
          <div class="mini-card-product-details">
            <h2> Tu accompagnes avec <%= booking.experience.user.first_name%>  pour l'activité <%= booking.experience.category %></h2>
            <p> <%= booking.experience.description %></p>
            <h3><%= booking.start_date%> </h3>
          </div>

          <div class="mini-card-product-details">
            <h2><%= booking.experience.price_per_hour%>€ </h2>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
