<%- if controller_name != 'sessions' %>
<div class="custom-button">
  <%= link_to "Connexion", new_session_path(resource_name) %><br />
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="custom-button">
    <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name) %><br />
  </div>
<% end %>
<br>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="custom-button">
    <%= link_to "S'inscrire", new_registration_path(resource_name) %><br />
  </div>
<% end %>
<br>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="custom-button">
    <%= link_to "Renvoyer confirmation?", new_confirmation_path(resource_name) %><br />
  </div>
<% end %>
<br>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="custom-button">
    <%= link_to "Renvoyer instructions?", new_unlock_path(resource_name) %><br />
  </div>
<% end %>
<br>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="custom-button">
      <%= link_to "Se connecter en tant que #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
    </div>
  <% end %>
<% end %>
