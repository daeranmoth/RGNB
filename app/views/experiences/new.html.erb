<h1 class="centered-title">Cr√©er une nouvelle experience</h1>
<div class="container">
  <%= simple_form_for @experience do |f| %>
    <%= f.input :price_per_hour, label:'Prix' %>
    <%= f.input :city, label:'Ville' %>
    <%= f.input :description, label:'Description' %>
    <%= f.input :category, label:'Categorie', collection: CATEGORY %>
    <%= f.submit "Creer l'experience", class: "custom-button" %>
  <% end %>
  <div class="custom-button">
    <%= link_to "Retour aux experiences", experiences_path %>
  </div>
</div>
