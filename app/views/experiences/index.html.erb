<div class="container">
  <h1>Toutes les experiences</h1>
  <div class="custom-button">
    <%= link_to "Créer une experience", new_experience_path %>
  </div>
</div>
<ul>
<% @experiences.each do |experience| %>
  <% if policy(experience).show? %>
    <li>Ville :<%= experience.city %></li>
    <li>Prix :<%= experience.price_per_hour %></li>
    <div class="custom-button">
      <%= link_to "Details", experience_path(experience) %>
    </div>
    <% if policy(experience).destroy? %>
    <div class="custom-button">
      <%= link_to "Supprimer cette expérience", experience_path(experience), method: :delete %>
    </div>
  <% end %>
<% end %>
</ul>
